---
import type { ProductsList } from "~/types";
const {id ,title, subtitle, items} = Astro.props as ProductsList;
---

<section class="text-gray-600 body-font" {...id ? { id } : {}}>
  <div class="container px-5 py-10 mx-auto">
    <div class="mb-8 md:mx-auto md:mb-12 text-center max-w-3xl text-default">
      <h2 class="font-bold leading-tighter tracking-tighter font-heading text-heading text-3xl md:text-4xl">{title}</h2>
      <p class="mt-4 text-muted text-xl">{subtitle}</p>
    </div>
    <div class="flex flex-wrap -m-4">
      {
        items && items.length && items.map(item => 
        item && (
          <div class="p-4 md:w-1/3">
        <div
          class="h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden transform duration-300 hover:shadow-xl cursor-pointe hover:-translate-y-1 group"
        >
          <img
            class="lg:h-96 md:h-36 w-full bg-slate-50 dark:bg-slate-400 object-cover object-center transform duration-300 group-hover:scale-110"
            src={item.image}
            alt="blog"
          />
          <div class="p-6">
            <h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1">{item.catalog}</h2>
            <h1 class="title-font text-lg font-medium text-gray-900 mb-3">
              <a href={item.links} class="hover:text-orange-600 dark:text-slate-200 dark:hover:text-orange-600  transition ease-in duration-200" >{item.title}</a></h1>
            <p class="leading-relaxed mb-3">
              { item.description}
            </p>
            <div class="flex items-center flex-wrap">
              <a href={item.links} class="text-orange-700 inline-flex items-center md:mb-2 lg:mb-0"
                >View More
                <svg
                  class="w-4 h-4 ml-2"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                  fill="none"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M5 12h14"></path>
                  <path d="M12 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
      ))
      }
    </div>
  </div>
</section>
